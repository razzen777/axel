<Window x:Class="WpfApp3.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Margin="289,171,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="LoginTextBox_TextChanged"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="289,245,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="179,162,0,0" VerticalAlignment="Top" Width="51"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="179,236,0,0" VerticalAlignment="Top" Height="27" RenderTransformOrigin="0.892,0.928"/>
        <Button Content="Авторизоваться&#xD;&#xA;" HorizontalAlignment="Left" Margin="289,318,0,0" VerticalAlignment="Top" Height="25" Click="Button_Click"/>

    </Grid>
</Window>
